# Safer Homebrew permission fixer
fixbrewperms() {
  local prefix
  prefix="$(brew --prefix 2>/dev/null)" || { echo "Homebrew not found."; return 1; }
  echo "Fixing Homebrew permissions at $prefix..."
  sudo chown -R "$(whoami)":admin "$prefix"
  sudo chmod -R g+rwx "$prefix"
  brew doctor
}

