# Use 'se' (showempties) or 'ce' (cleanempties) functions defined below

# Clean .DS_Store files only on your local internal volume (no network/external),
# skipping ~/Library and ~/Desktop (to preserve Desktop layout), with a quiet spinner + count.
clean-ds() {
  echo "ðŸ§¹ Starting .DS_Store cleanup (local-only; Desktop & Library excluded)â€¦"

  TMPFILE=$(mktemp)

  # Build safe local dirs on the same device as $HOME
  local HOME_DEV SAFE_DIRS=() d base dev
  HOME_DEV=$(df -P "$HOME" | tail -1 | awk '{print $1}')
  for d in "$HOME"/*; do
    [[ -d "$d" && ! -L "$d" ]] || continue
    base=${d##*/}
    case "$base" in Library|Desktop|.*) continue ;; esac
    dev=$(df -P "$d" | tail -1 | awk '{print $1}')
    [[ "$dev" == "$HOME_DEV" ]] && SAFE_DIRS+=("$d")
  done
  [[ ${#SAFE_DIRS[@]} -eq 0 ]] && { echo "â„¹ï¸ No eligible local folders."; return 0; }

  # Launch the cleanup in the BACKGROUND quietly, then disown it (no job-control messages).
  # Save and restore job control state to prevent leaks on early exit
  local old_monitor
  old_monitor=$(set +o | grep monitor)
  set +m  # temporarily silence job control output
  trap '$old_monitor' RETURN  # restore on function exit
  (
    for d in "${SAFE_DIRS[@]}"; do
      find "$d" -xdev -type f -name ".DS_Store" \
        -not -path "*/Library/*" \
        -not -path "$HOME/Desktop/*" \
        -print -delete
    done > "$TMPFILE"
  ) >/dev/null 2>&1 &
  local FINDPID=$!
  disown -h "$FINDPID" 2>/dev/null || disown %+

  # Foreground spinner that watches the background PID without generating job messages
  {
    local spin='|/-\' i=0
    while kill -0 "$FINDPID" 2>/dev/null; do
      printf "\r%s" "${spin:$(( (i++) % 4 )):1}"
      sleep 0.2
    done
    printf "\r"
  }

  local COUNT
  COUNT=$(wc -l < "$TMPFILE" | tr -d ' ')
  rm -f "$TMPFILE"

  printf "âœ… .DS_Store cleanup complete â€” removed %s file%s.\n" "$COUNT" "$( [ "$COUNT" -eq 1 ] || echo 's' )"
  echo "ðŸ”’ Searched only on: $HOME_DEV"
  echo "ðŸ“ Folders scanned:"; for d in "${SAFE_DIRS[@]}"; do printf " â€¢ %s\n" "${d/$HOME/~}"; done
}

