# Activate nearest Python virtualenv named .venv (searches upward)
v() {
  local d="$PWD"
  while [[ "$d" != "/" ]]; do
    if [[ -f "$d/.venv/bin/activate" ]]; then
      # shellcheck disable=SC1091
      source "$d/.venv/bin/activate"
      return
    fi
    d="${d:h}"
  done
  echo "No .venv found in current or parent directories."
  return 1
}

