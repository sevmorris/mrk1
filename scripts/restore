#!/usr/bin/env bash

#____________________//Personal restore script for//___________________________#
#______      ______                                           _           _____#
#_____      / ____ \________ _   ______ ___  ____  __________(_)____       ____#
#____      / / __ `/ ___/ _ \ | / / __ `__ \/ __ \/ ___/ ___/ / ___/      _____#
#___      / / /_/ (__  )  __/ |/ / / / / / / /_/ / /  / /  / (__  )      ______#
#____     \ \__,_/____/\___/|___/_/ /_/ /_/\____/_/  /_/  /_/____/      _______#
#_____     \____/                                                      ________#
#______________________________________________________________________________#

# Color variables for better readability
bold=$(tput bold)
yellow=$(tput setaf 3)
reset=$(tput sgr0)
green=$(tput setaf 2)  # Corrected color variable for green

# Function to print arrows for better visual separation
arrow() {
    echo ""
    echo "${green}${bold}>>> ${reset}$*"
}

# Introduction
echo "Running restore script"
sleep 1

# Restoring to ~/Library/Saved Application State
arrow "Restoring to ${yellow}~/Library/Saved Application State${reset}" && echo
sleep 1

sudo rsync -av ~/mrk1/backups/Saved\ Application\ State/ ~/Library/Saved\ Application\ State/

# Restoring ~/Library/Preferences
arrow "Restoring ${yellow}~/Library/Preferences${reset}" && echo
sleep 1

sudo rsync -av ~/mrk1/backups/Preferences/ ~/Library/Preferences/

# Manual instruction for specific data restoration
echo "Restore Chrono Plus data manually"
sleep 1

# Display restore success message
echo ""
echo "${yellow}–––––––––––––––––––––––––––${reset}"
echo "     Restore successful"
echo "${yellow}–––––––––––––––––––––––––––${reset}"
